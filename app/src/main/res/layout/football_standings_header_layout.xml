<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/surface_1"
    android:padding="8dp">

    <TextView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text="@string/position_symbol"
        android:textSize="14sp"
        android:textColor="?attr/on_surface_lv2"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/position"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/team"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        android:textColor="?attr/on_surface_lv2"
        android:layout_weight="5"
        android:id="@+id/name"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/initial_played"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:textColor="?attr/on_surface_lv2"
        android:textSize="14sp"
        android:layout_weight="1"
        android:id="@+id/played"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/initial_wins"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:textColor="?attr/on_surface_lv2"
        android:textSize="14sp"
        android:layout_weight="1"
        android:id="@+id/wins"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/initial_draws"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:textColor="?attr/on_surface_lv2"
        android:textSize="14sp"
        android:layout_weight="1"
        android:id="@+id/draws"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/initial_losses"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:textColor="?attr/on_surface_lv2"
        android:textSize="14sp"
        android:layout_weight="1"
        android:id="@+id/losses"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/goals"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:textColor="?attr/on_surface_lv2"
        android:textSize="14sp"
        android:layout_weight="2"
        android:id="@+id/goal_diff"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/abbr_points"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:textColor="?attr/on_surface_lv2"
        android:textSize="14sp"
        android:layout_weight="1.5"
        android:id="@+id/points"
        android:textAlignment="center"/>



</TableRow>